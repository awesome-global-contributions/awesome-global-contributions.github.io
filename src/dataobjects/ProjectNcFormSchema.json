        "label": "Rating comment"
      }
    },
    "otherLinks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "ui": {
              "label": "name"
            }
          },
          "description": {
            "type": "string",
            "ui": {
              "label": "description"
            }
          },
          "link": {
            "type": "string",
            "ui": {
              "label": "link"
            },
            "rules": {
                "url": true
            }
          }
        },
        "ui": {
          "label": "Link information"
        }
      },
      "ui": {
        "label": "Other potentially useful links"
