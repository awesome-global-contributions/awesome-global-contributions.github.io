      "items": {
        "type": "string",
        "ui": {
          "label": "language"
        }
      },
      "ui": {
        "label": "Used programming languages"
      },
      "rules": {
        "pattern": "[^A-Z]+"
      }
    },
    "rating": {
      "type": "integer",
      "ui": {
        "label": "Rating",
        "widget": "rate",
        "widgetConfig": {
          "showScore": true
        }
      }
    },
    "repoUrl": {
      "type": "string",
      "ui": {
        "label": "Url of the repository",
        "preview": {
          "type": "link"
        }
      },
      "rules": {
        "url": true
      }
    },
    "websiteUrl": {
      "type": "string",
      "ui": {
        "label": "Url of the website",
        "preview": {
          "type": "link"
        }
      },
      "rules": {
        "url": true
      }
    },
    "sdgs": {
      "type": "array",
      "ui": {
        "label": "SDGs",
        "widget": "select",
        "widgetConfig": {
          "multiple": true,
          "filterable": true,
          "itemTemplate": "<span>{{item.value}}: {{item.name}}</span>",
          "enumSource": [
            { "value": 1, "name": "No Poverty" },
            { "value": 2, "name": "Zero Hunger" },
            { "value": 3, "name": "Good Health and Well-Being" },
            { "value": 4, "name": "Quality Education" },
            { "value": 5, "name": "Gender Equality" },
            { "value": 6, "name": "Clean Water and Sanitation" },
            { "value": 7, "name": "Affordable and Clean Energy" },
            { "value": 8, "name": "Decent Work and Economic Growth" },
            { "value": 9, "name": "Industry, Innovation and Infrastructure" },
            { "value": 10, "name": "Reduced Inequalities" },
            { "value": 11, "name": "Sustainable Cities and Communities" },
            { "value": 12, "name": "Responsible Consumption and Production" },
            { "value": 13, "name": "Climate Action" },
            { "value": 14, "name": "Life below Water" },
            { "value": 15, "name": "Life on Land" },
            { "value": 16, "name": "Peace, Justice and Strong Institutions" },
            { "value": 17, "name": "Partnerships for the Goals" }
          ]
        }
      },
      "rules": {
        "uniqueItems": true
      }
    },
    "contributionGuidelinesUrl": {
      "type": "string",
      "ui": {
        "label": "Url of the Contribution Guideline",
