      "type": "string",
      "ui": {
        "label": "Url to the License"
      },
      "rules": {
        "url": true
      }
    },
    "naturalLanguages": {
      "type": "array",
      "default": [ "English" ],
      "items": {
        "type": "string",
        "ui": {
          "label": "Language"
        }
      },
      "ui": {
        "label": "Spoken Languages of the project"
      }
    }
